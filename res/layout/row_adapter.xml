<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal">


    <TextView
            android:id="@+id/time_delta"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="95 mins"
            android:textSize="24sp" android:textStyle="bold"
            android:password="false" android:width="120dp" android:singleLine="true" android:gravity="top|center_horizontal"
            android:background="@drawable/row_gradient1" android:paddingTop="4dp" android:paddingBottom="10dp"/>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/lightgray_gradient"
            android:orientation="vertical" android:paddingTop="4dp" android:paddingBottom="4dp">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/route_number"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="212"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000" android:paddingLeft="10dp" android:paddingRight="5dp"
                    android:password="false" android:phoneNumber="false" />

            <TextView
                    android:id="@+id/headsign"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="to Esplanade Stn. and a bit further to the right"
                    android:textColor="#333333"
                    android:textSize="10sp" android:maxLines="2"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:45"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"/>

            <TextView
                    android:id="@+id/stop_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Wellard Station Platform 1"
                    android:textColor="#888888"
                    android:textSize="9sp"
                    android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>