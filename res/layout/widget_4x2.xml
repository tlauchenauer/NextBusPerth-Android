<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:padding="@dimen/widget_margin">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:focusable="false">

        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:id="@+id/relativeLayout">
            <TextView android:id="@+id/journey_name" android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center" android:textSize="24sp" android:textColor="#ffffff"
                      android:text="Home Journey"
                      android:textStyle="bold" android:background="@drawable/widget_top" android:paddingTop="6dp"
                      android:paddingBottom="5dp"/>
            <TextView android:id="@+id/last_update" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="9sp" android:textColor="#bbbbbb" android:layout_alignParentRight="true"
                      android:paddingRight="4dp" android:paddingTop="2dp" android:text="last update: 17:45"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:orientation="horizontal">
            <LinearLayout android:layout_width="90dp" android:layout_height="fill_parent"
                          android:background="@drawable/green_gradient" android:orientation="horizontal">
                <TextView android:id="@+id/s1_time_delta" android:layout_width="wrap_content"
                          android:layout_height="fill_parent" android:textColor="#ffffff" android:text="95"
                          android:textSize="24sp" android:textStyle="bold" android:password="false"
                          android:singleLine="true" android:gravity="right" android:width="60dp"
                          android:paddingTop="4dp"
                          android:paddingBottom="10dp" android:paddingRight="5dp" android:visibility="visible"/>
                <TextView android:id="@+id/s1_time_center" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:textColor="#ffffff" android:text="Now"
                          android:textSize="24sp" android:textStyle="bold" android:singleLine="true"
                          android:gravity="center|top" android:visibility="gone" android:paddingTop="4dp"
                          android:paddingBottom="10dp" android:paddingRight="5dp"/>
                <TextView android:id="@+id/s1_mins" android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:text="min" android:textColor="#ffffff" android:textStyle="bold"
                          android:textSize="12sp"
                          android:singleLine="true" android:gravity="right" android:paddingTop="16dp"
                          android:paddingRight="5dp" android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:background="@drawable/lightgray_gradient" android:orientation="vertical"
                          android:paddingTop="4dp" android:paddingBottom="4dp">
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:id="@+id/s1_route_number" android:layout_width="wrap_content"
                              android:layout_height="fill_parent" android:text="212" android:textSize="24sp"
                              android:textStyle="bold" android:textColor="#000000" android:paddingLeft="10dp"
                              android:paddingRight="5dp"/>
                    <TextView android:id="@+id/s1_headsign" android:layout_width="wrap_content"
                              android:layout_height="fill_parent"
                              android:text="to Esplanade Stn. and a bit further" android:textColor="#333333"
                              android:textSize="10sp" android:maxLines="1" android:gravity="bottom"
                              android:paddingBottom="4dp" android:paddingRight="5dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:id="@+id/s1_departure_time" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:text="7:45" android:textColor="#888888"
                              android:textSize="10sp" android:gravity="center_horizontal" android:paddingLeft="10dp"/>
                    <TextView android:id="@+id/s1_stop_name" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:text="Wellard Station Platform 1"
                              android:textColor="#888888" android:textSize="9sp" android:maxLines="1"
                              android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:orientation="horizontal">
            <LinearLayout android:layout_width="90dp" android:layout_height="fill_parent"
                          android:background="@drawable/widget_bottom_left" android:orientation="horizontal">
                <TextView android:id="@+id/s2_time_delta" android:layout_width="wrap_content"
                          android:layout_height="fill_parent" android:textColor="#ffffff" android:text="95"
                          android:textSize="24sp" android:textStyle="bold" android:password="false"
                          android:singleLine="true" android:gravity="right" android:width="60dp"
                          android:paddingTop="4dp"
                          android:paddingBottom="10dp" android:paddingRight="5dp" android:visibility="visible"/>
                <TextView android:id="@+id/s2_time_center" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:textColor="#ffffff" android:text="Now"
                          android:textSize="24sp" android:textStyle="bold" android:singleLine="true"
                          android:gravity="center|top" android:visibility="gone" android:paddingTop="4dp"
                          android:paddingBottom="10dp" android:paddingRight="5dp"/>
                <TextView android:id="@+id/s2_mins" android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:text="min" android:textColor="#ffffff" android:textStyle="bold"
                          android:textSize="12sp"
                          android:singleLine="true" android:gravity="right" android:paddingTop="16dp"
                          android:paddingRight="5dp" android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:background="@drawable/widget_bottom_right" android:orientation="vertical"
                          android:paddingTop="4dp" android:paddingBottom="4dp">
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:id="@+id/s2_route_number" android:layout_width="wrap_content"
                              android:layout_height="fill_parent" android:text="212" android:textSize="24sp"
                              android:textStyle="bold" android:textColor="#000000" android:paddingLeft="10dp"
                              android:paddingRight="5dp"/>
                    <TextView android:id="@+id/s2_headsign" android:layout_width="wrap_content"
                              android:layout_height="fill_parent"
                              android:text="to Esplanade Stn. and a bit further" android:textColor="#333333"
                              android:textSize="10sp" android:maxLines="1" android:gravity="bottom"
                              android:paddingBottom="4dp" android:paddingRight="5dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:id="@+id/s2_departure_time" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:text="7:45" android:textColor="#888888"
                              android:textSize="10sp" android:gravity="center_horizontal" android:paddingLeft="10dp"/>
                    <TextView android:id="@+id/s2_stop_name" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:text="Wellard Station Platform 1"
                              android:textColor="#888888" android:textSize="9sp" android:maxLines="1"
                              android:paddingLeft="10dp" android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>